extends layout

block content
  .top-margin
  != messages()
  ul.errors
   if errors
    each error, i in errors
     if error.msg
      li #{error.msg}
  h1.header-margin Register
  hr
  form#register(method='post', action='/blog/register', enctype="multipart/form-data")
   label Enter your Name:
   input(type='text', name='name', maxlength="24")
   label Enter your E-mail:
   input(type='text', name='email', maxlength="32")
   br
   br
   label Choose a Username:
   input(type='text', name='username', placeholder='Username must be 5-12 characters long')
   label Enter a Password:
   input(type='password', name='password', placeholder='Password must be 6-12 characters long')
   label Confirm Password:
   input(type='password', name='password2', placeholder='Re-enter your password')
   label.avatar-upload Upload Avatar(Optional)*:
   input(name='avatar', type='file')
   p#upload-text *Max size = 50kb & JPG format
   p.privacy-policy-text **By registering you agree with&nbsp
    a(href="/blog/register/privacypolicy" target="_blank")
     | Samsblog's Privacy Policy
     i.fa.fa-external-link.fa-1x
    | &nbsp&nbsp&nbsp&nbspand&nbsp
    a(href="/blog/register/termsofuse" target="_blank")
     | Terms of Use
     i.fa.fa-external-link.fa-1x
   input(type='submit', value='Register')
  br

  include footer
